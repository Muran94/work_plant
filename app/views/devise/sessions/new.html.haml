= render layout: "partial_layouts/local_header" do
  ログイン

.l-section
  .l-section__body
    .l-container
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource

        .c-form__field
          = f.label :email, class: "c-form__field-label"
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "c-form__field-input"
        .c-form__field
          = f.label :password, class: "c-form__field-label"
          = f.password_field :password, autocomplete: "current-password", placeholder: "●●●●●●●●", class: "c-form__field-input"

        .c-form__field
          = f.submit "ログイン", class: "c-button c-button--primary"
    
      =# render "devise/shared/links"
