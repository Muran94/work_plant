= render layout: "partial_layouts/local_header" do
  会員登録

.l-section
  .l-section__body
    .l-container
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource

        .c-form__field
          = f.label :email, class: "c-form__field-label"
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "c-form__field-input"
        .c-form__field
          = f.label :password, class: "c-form__field-label"
          = f.password_field :password, autocomplete: "new-password", placeholder: "●●●●●●●●", class: "c-form__field-input"
        .c-form__field
          = f.label :password_confirmation, class: "c-form__field-label"
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "●●●●●●●●", class: "c-form__field-input"

        .c-form__field
          = f.submit class: "c-button c-button--primary"
    
      =# render "devise/shared/links"
